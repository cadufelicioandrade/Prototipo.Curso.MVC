@model VideoLocadora.MVC.Web.Models.GeneroViewModel

@{
    ViewData["Title"] = "Novo Gênero";
}

<h2>Novo Gênero</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeGenero" class="control-label">Nome Gênero</label>
                <input asp-for="NomeGenero" class="form-control" />
                <span asp-validation-for="NomeGenero" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
