@model VideoLocadora.MVC.Web.Models.EstadoViewModel

@{
    ViewData["Title"] = "Edição";
}

<h2>Edição Estado</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden asp-for="EstadoId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NomeEstado" class="control-label"></label>
                <input asp-for="NomeEstado" class="form-control" />
                <span asp-validation-for="NomeEstado" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à listagem</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
