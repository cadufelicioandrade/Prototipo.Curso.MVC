@model Prototipo.Curso.MVC.Web.Models.FilmeViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<div>
    <h2>Detalhe Filme</h2>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TituloFilme)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ano)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ano)
        </dd>
        <dt class = "col-sm-2">
            Valor Diária
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorDiaria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Disponivel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Disponivel)
        </dd>
        <dt class = "col-sm-2">
            Nome Diretor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.diretorViewModel.NomeDiretor)
        </dd>
        <dt class = "col-sm-2">
            Gênero
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.generoViewModel.NomeGenero)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { Id = Model.FilmeId }) |
    <a asp-action="Index">Voltar à listagem</a>
</div>
