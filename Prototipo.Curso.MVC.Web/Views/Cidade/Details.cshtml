@model Prototipo.Curso.MVC.Web.Models.CidadeViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes Cidade</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Cidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCidade)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoViewModel.NomeEstado)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { Id = Model.CidadeId }) |
    <a asp-action="Index">Voltar à listagem</a>
</div>
