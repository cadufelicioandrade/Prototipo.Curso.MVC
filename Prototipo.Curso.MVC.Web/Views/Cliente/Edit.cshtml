@model Prototipo.Curso.MVC.Web.Models.ClienteViewModel

@{
    ViewData["Title"] = "Edição";
}

<h2>Edição Cliente</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden asp-for="ClienteId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SobreNome" class="control-label">Sobre Nome</label>
                <input asp-for="SobreNome" class="form-control" />
                <span asp-validation-for="SobreNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelFixo" class="control-label"></label>
                <input asp-for="TelFixo" class="form-control" />
                <span asp-validation-for="TelFixo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" type="date" class="control-label">Data Nascimento</label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="enderecoClienteViewModel.cidadeViewModel.CidadeId" class="control-label"></label>
                @Html.DropDownList("CidadeId", (MultiSelectList)ViewBag.cidadeViewModelList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input hidden asp-for="enderecoClienteViewModel.EnderecoId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="enderecoClienteViewModel.Logradouro" class="control-label"></label>
                <input asp-for="enderecoClienteViewModel.Logradouro" class="form-control" />
                <span asp-validation-for="enderecoClienteViewModel.Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="enderecoClienteViewModel.CEP" class="control-label"></label>
                <input asp-for="enderecoClienteViewModel.CEP" class="form-control" />
                <span asp-validation-for="enderecoClienteViewModel.CEP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="enderecoClienteViewModel.Bairro" class="control-label"></label>
                <input asp-for="enderecoClienteViewModel.Bairro" class="form-control" />
                <span asp-validation-for="enderecoClienteViewModel.Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="enderecoClienteViewModel.Numero" class="control-label"></label>
                <input asp-for="enderecoClienteViewModel.Numero" class="form-control" />
                <span asp-validation-for="enderecoClienteViewModel.Numero" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
